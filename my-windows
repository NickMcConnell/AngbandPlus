#!/bin/sh

./autogen.sh
./my-configure mingw
make clean
make -j4
cp src/composband.exe .
if [ -n "$1" ]
then
    file=composband-"$1".zip
else
    file=composband-"$(git describe)".zip
fi

rm $file
find ./lib -name Makefile -prune -o -name .deps -prune -o -print | zip $file -@
zip $file composband.exe readme.txt
