#!/bin/sh

./autogen.sh
./my-configure mingw
make clean
make -j4
cp src/frogcomposband.exe .
if [ -n "$1" ]
then
    file=frogcomposband-"$1".zip
else
    file=frogcomposband-"$(git describe)".zip
fi

rm $file
find ./lib -name Makefile -prune -o -name .deps -prune -o -print | zip $file -@
zip $file frogcomposband.exe readme.txt
